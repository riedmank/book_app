<!DOCTYPE html>
<html>
  <%- include('../../partials/head') %>
  <body>
    <%- include('../../partials/header') %>
    <section class="books">
        <% books.forEach(book => { %>
          <div class="card in-block">
            <img src=<%=book.image_url %> alt="image">
            <h3 class="card-title"><%= book.title %></h3>
            <h4 class="card-author"><%= book.author %></h4>
            <!-- <a class="card-button" href="/books/<%=book.book_id %>">More Details</a> -->
            <form action="/books" method="POST">
              <input type="hidden" name="title" value="<%= book.title %>">
              <input type="hidden" name="author" value="<%= book.author %>">
              <input type="hidden" name="isbn" value="<%= book.isbn %>">
              <input type="hidden" name="image_url" value=<%= book.image_url %>>
              <input type="hidden" name="description" value="<%= book.description %>">
              <input type="submit" value="Add">
            </form>
          </div>
        <% }) %>
      </section>
  </body>
</html>